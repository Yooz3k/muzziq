@using Microsoft.AspNetCore.Identity
@using Muzziq.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a class="menu-element" asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Siema @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Wyloguj</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a class="menu-element" asp-area="" asp-controller="Account" asp-action="Register">Zarejestruj</a></li>
        <li><a class="menu-element" asp-area="" asp-controller="Account" asp-action="Login">Zaloguj</a></li>
    </ul>
}
