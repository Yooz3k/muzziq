@model Muzziq.Models.MatchViewModels.MatchSummaryViewModel
@{
    int position = 0;
}

<div>
    <table class="table table-bordered table-responsive table-hover" width="200">
        <thead>
            <tr>
                <td>
                    Miejsce
                </td>
                <td>
                    Gracz
                </td>
                <td>
                    Wynik
                </td>
            </tr>
        </thead>

        @foreach (Result result in Model.Match.Results)
        {
            position++;
            <tr>
                <td>
                    @position.
                </td>
                <td>
                    @result.Player.Nickname
                </td>
                <td>
                    @result.Points
                </td>
            </tr>
        }
    </table>
</div>